# Sigma Configuration
# Copy this file to ~/.sigma/config.env or set as environment variables

# =============================================================================
# LLM Provider API Keys (configure at least one)
# =============================================================================

# Sigma Cloud (Hack Club) - Get key at https://hackclub.com/api
SIGMA_CLOUD_API_KEY=

# OpenAI - Get key at https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic - Get key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google Gemini - Get key at https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# Groq - Get key at https://console.groq.com/
GROQ_API_KEY=

# xAI (Grok) - Get key at https://x.ai/
XAI_API_KEY=

# =============================================================================
# Data Provider API Keys
# =============================================================================

# Polygon.io - Get key at https://polygon.io/
POLYGON_API_KEY=

# Alpha Vantage (free tier available) - https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=6ER128DD3NQUPTVC

# Exa Search - https://exa.ai/
EXA_API_KEY=

# =============================================================================
# Model Settings
# =============================================================================

# Default model to use
DEFAULT_MODEL=gpt-4o

# Ollama URL (for local models)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# LEAN Backtesting (optional)
# =============================================================================

LEAN_ENABLED=false
LEAN_CLI_PATH=
LEAN_DIRECTORY=
